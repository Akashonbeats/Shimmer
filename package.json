{
  "name": "shimmer",
  "productName": "Shimmer",
  "version": "1.1.0",
  "description": "Shimmer, A note-taking app built for design enthusiasts",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "alt-start": "npx electron@25.2.0 .",
    "reinstall": "rm -rf node_modules && npm install",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win"
  },
  "devDependencies": {
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.akashsampath.shimmer",
    "asar": true,
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "rounded_icon.icns",
      "extendInfo": {
        "CFBundleSupportedPlatforms": [
          "MacOSX"
        ]
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "arm64"
          ]
        }
      ],
      "icon": "rounded_icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "icon": "rounded_icon.icns"
    },
    "copyright": "Copyright Â© 2025 Akash Sampath"
  },
  "dependencies": {
    "electron": "^25.2.0"
  }
}
